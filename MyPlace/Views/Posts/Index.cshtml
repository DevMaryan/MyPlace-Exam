@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model List<MyPlace.ViewModels.PostListModel>;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image 
            </th>
            <th>
                Is Private
            </th>
            <th>
                Date Created 
            </th>
            <th>
                Date Updated
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="width:60px;height:60px;object-fit:cover;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPrivate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-warning"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

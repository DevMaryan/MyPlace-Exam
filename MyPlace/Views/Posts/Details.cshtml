@model MyPlaceModels.Post

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <img src=" @Html.DisplayFor(model => model.ImageUrl)" style="width:360px;height:360px;object-fit:cover;" />
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dd class="col-sm-10">
           <p>Author</p> <small>@Html.DisplayFor(model => model.Email)</small>
        </dd>
    </dl>
</div>

